
<%= simple_form_for(@alert) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :title, :input_html => {:class => "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.input :content, :input_html => {:class => "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.input :latitude, :input_html => {:class => "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.input :longitude, :input_html => {:class => "form-control"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "pull-right btn-success" %>
  </div>
<% end %>

